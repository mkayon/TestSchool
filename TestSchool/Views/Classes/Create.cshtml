            <div class="col-md-offset-2 col-md-10">
                <table>
                    <tr>
                        @{
                            int cnt = 0;
                            List<TestSchool.ViewModels.AssignedStudentData> students = ViewBag.students;

                            foreach (var student in students)
                            {
                                if (cnt++ % 3 == 0)
                                {

                                    @:</tr><tr>
                                }
                               
                                    @:<td>
                                    <input type="checkbox"
                                           name="selectedCourses"
                                           value="@student.StudentID"
                                           @(Html.Raw(student.Assigned ? "checked=\"checked\"" : "")) />
                                     @student.StudentID @: @student.StudentFirstName
                                       
                                          @:</td>
                            }
                                    @:</tr>
                        }
                    </table>
